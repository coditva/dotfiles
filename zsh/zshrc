#     ITERM_PROFILE=$1
# }
# iterm_toggle_profile() {
#     if [[ $ITERM_PROFILE == "Dark" ]]; then
#         iterm_profile Light
#     else
#         iterm_profile Dark
#     fi
# }

export FPATH="${FPATH}:${HOME}/.dotfiles/zsh/site-functions"

# Setting for the new UTF-8 terminal support
LC_CTYPE="en_US.UTF-8"
LC_ALL="en_US.UTF-8"
